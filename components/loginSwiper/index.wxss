page {
  width: 100%;
  height: 100%;
}

/* 包裹轮播图 */

.wrap {
  width: 100%;
  height: 100%;
  position: relative;
  background: #000;
}

/*用来包裹所有的小圆点  */

.dots {
  width: 80px;
  height: 10px;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 90%;
  bottom: 40rpx;
  transform: translateX(-50%);
}

.slide-image {
  width: 100%;
  height: 100%;
}

/*未选中时的小圆点样式 */

.dot {
  width: 10rpx;
  height: 4rpx;
  border-radius: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  background-color: white;
}

/*选中以后的小圆点样式  */

.active {
  width: 30rpx;
  height: 4rpx;
  background-color: #aaa;
}

/* 最新活动 */

.activity {
  width: 100%;
  box-sizing: border-box;
  /* height: 180rpx; */
  margin: 20rpx 0 0 0;
  padding: 40rpx;
}

.activity>text {
  font-size: 36rpx;
}

.activity>view {
  margin: 10rpx auto;
  font-size: 26rpx;
  color: #aaa;
}

.back {
  width: 55rpx;
  height: 55rpx;
  line-height: 80rpx;
  text-align: center;
  background: transparent;
  border: 2rpx solid #efefef;
  border-radius: 50%;
  position: absolute;
  top: 6%;
  left: 6%;
  z-index: 999;
}

.back>image {
  width: 40rpx;
  height: 40rpx;
  display: block;
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 更多和登录按钮 */

.more {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 50rpx;
  position: absolute;
  bottom: 80rpx;
  left: 40rpx;
  font-size: 26rpx;
  font-weight: bold;
}
/* //登录按钮弹框 */
.regbtn{
  width: 80%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  text-align: center;
  z-index: 2;
  border-radius: 20rpx;
  padding: 20rpx 0 0 0;
}
.regbtn>view:nth-of-type(1){
  width: 100%;
  font-size: 36rpx;
  line-height: 80rpx;
}
.regbtn>view:nth-of-type(2){
  width: 100%;
  font-size: 30rpx;
  height: 150rpx;
  color: #aaa;
  line-height: 80rpx;
}
.queding{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  line-height: 100rpx;
  font-size: 32rpx;
  border-top: 1rpx solid #aaa;
}
.queding>view{
  display: block;
  flex: 5;
}
button{
  border: 0rpx;
  outline: none;
  background: transparent;
  border-radius: 0;
  box-sizing: none;
  font-size: 32rpx;
}
button::after {
  border: none;
}