page{
  width: 100%;
  height: 100%;
  background: #efefef;
}
.nav{
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 999;
  background: #fff;
}
.scroll-view_H {
  width: 100%;
  height: 70rpx;
  display: block;
  white-space: nowrap;
  position: relative;
}

.scroll-view-item {
  height: 70px;
  overflow: hidden;
}
.scroll-view-item_H {
  display: inline-block;
  width: 20%;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
  font-size: 26rpx;
  color: #ccc;
  text-align: center;
}

.active {
  font-weight: bold;
  color: #000;
}

.bottom_line {
  width: 20%;
  height: 4rpx;
  background: #000;
  position: absolute;
  left: 0rpx;
  bottom: 40rpx;
  z-index: 999;
}
/* 内容区域/ */
.content{
  width: 100%;
  margin-top: 70rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 4%;
  box-sizing: border-box;
  background: #efefef;
}
.goods{
  width: 48%;
  font-size: 26rpx;
  /* background: #fff; */
  /* padding: 2%; */
  margin:10rpx 0;
  box-sizing: border-box;
}
.goods>image{
  width:100%;
  background: #efefef;
}
.goods>.title{
  font-weight: bold;
  margin-top: 10rpx;
}
.goods>.type{
  color: #aaa;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.goods>.price{
  font-size: 24rpx;
  font-weight: bold;
}