/* 有地址 */

.List {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 1rpx solid #ccc;
}

.List>view:nth-of-type(1) {
  width: 85%;
}

.List>view:nth-of-type(2) {
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.List>view:nth-of-type(2)>image {
  width: 40rpx;
  height: 40rpx;
}

.addList {
  width: 100%;
  box-sizing: border-box;
  padding: 4%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}

.name {
  width: 100%;
  margin: 20rpx 0;
  font-size: 28rpx;
}

.font {
  font-size: 28rpx;
}

.edit {
  width: 100%;
  height: 40rpx;
  margin: 40rpx 0 0 0;
  text-decoration: underline;
}

/* 没有地址 */

.addNewAddress {
  width: 100%;
  margin: 160rpx auto;
  text-align: center;
  box-sizing: border-box;
}

.botmBtn {
  width: 100%;
  margin: 0rpx auto;
  text-align: center;
  box-sizing: border-box;
  position: fixed;
  bottom: 20rpx;
}

.addNewAddress>view>image {
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin: 70rpx auto;
}

.none {
  font-weight: bold;
  font-size: 40rpx;
  margin: 20rpx auto;
}

.tips {
  font-size: 26rpx;
  margin: 20rpx 0;
  color: #aaa;
}

.newBtn {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx auto 20rpx auto;
  border-radius: 100rpx;
  background: #000;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.useWx {
  width: 90%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 20rpx auto;
  border-radius: 100rpx;
  border: 2rpx solid #000;
  font-size: 28rpx;
  font-weight: bold;
}
