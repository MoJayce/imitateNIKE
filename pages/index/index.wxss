page {
  box-sizing: border-box;
}

.Top {
  width: 100%;
  height: 12%;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 99999;
}
.hasTop{
  /* margin-top:14%  */
}
/* 包裹轮播图 */

.wrap {
  height: auto;
  position: relative;
}

/*用来包裹所有的小圆点  */

.dots {
  width: 80px;
  height: 10px;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 90%;
  bottom: 20rpx;
  transform: translateX(-50%);
}

.slide-image {
  width: 100%;
  height: 100%;
}

/*未选中时的小圆点样式 */

.dot {
  width: 10rpx;
  height: 4rpx;
  border-radius: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  background-color: white;
}

/*选中以后的小圆点样式  */

.active {
  width: 30rpx;
  height: 4rpx;
  background-color: #aaa;
}

/* 最新活动 */

.activity {
  width: 100%;
  box-sizing: border-box;
  /* height: 180rpx; */
  margin: 20rpx 0 0 0;
  padding: 40rpx;
}

.activity>text {
  font-size: 36rpx;
}

.activity>view {
  margin: 10rpx auto;
  font-size: 26rpx;
  color: #aaa;
}

/* 块级 */

.block {
  position: relative;
}

/* 更多和登录按钮 */

.more {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 50rpx;
  position: absolute;
  bottom: 80rpx;
  left: 40rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.block > image {
  width: 100%;
  /* height: 800rpx */
}
